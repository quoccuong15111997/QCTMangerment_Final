<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtChartTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Doanh thu theo khu vá»±c"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/grey_80"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgDateExpan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtChartTitle"
            app:srcCompat="@drawable/ic_baseline_expand_more_24" />

        <TextView
            android:id="@+id/txtDateFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16/07/2020"
            android:textColor="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="@+id/txtHyphen"
            app:layout_constraintEnd_toStartOf="@+id/txtHyphen"
            app:layout_constraintTop_toTopOf="@+id/txtHyphen" />

        <TextView
            android:id="@+id/txtHyphen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - "
            android:textColor="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="@+id/txtDateTo"
            app:layout_constraintEnd_toStartOf="@+id/txtDateTo"
            app:layout_constraintTop_toTopOf="@+id/txtDateTo" />

        <TextView
            android:id="@+id/txtDateTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22/07/2020"
            android:textColor="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="@+id/imgDateExpan"
            app:layout_constraintEnd_toStartOf="@+id/imgDateExpan"
            app:layout_constraintTop_toTopOf="@+id/imgDateExpan" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>